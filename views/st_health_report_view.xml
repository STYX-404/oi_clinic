<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         #--------form--------------

        <record id="healthreport_form" model="ir.ui.view">
            <field name="name">healthreport.form</field>
            <field name="model">health.report</field>
            <field name="arch" type="xml">
                <form string="Health Report Form">
                    <sheet>
                        <group string="Student Information">
                            <field name="st_ids"/>
                        </group>
                         <group col="4">
                            <field name="st_height"/>
                            <field name="st_weight"/>
                            <field name="st_bmi"/>

                        </group>
                         <group string="Measure The Sight" col="4">
                            <field name="right_eye"/>
                            <field name="left_eye"/>
                            <field name="glasses"/>

                        </group>
                         <group col="4" string="Chronic conditions">
                            <field name="breast_diseases"/>
                            <field name="blood_pressure" placeholder="Example: 120/70"/>
                            <field name="birth_defect"/>
                        </group>
                         <group col="4">
                            <field name="drugs"/>
                            <field name="result" attrs="{'invisible': [('drugs', '=', False) ]}" />
                            <field name="type_drug" attrs="{ 'invisible': [('result', '=', 'n',) ]}" />
                        </group>
                        <group >
                            <field name="accept_unaccept"/>
                            <field name="st_notes" placeholder="notes..."/>
                        </group>
                         <group string="Laboratory Information" attrs="{ 'invisible': [('accept_unaccept', '=', 'Unacceptable',) ]}">
                            <field name="lab_info" attrs="{ 'invisible': [('accept_unaccept', '=', 'Unacceptable',) ]}"/>

                        </group>
                        <group col="4" string="Result of blood testing" attrs="{ 'invisible': [('accept_unaccept', '=', 'Unacceptable',) ]}">
                            <field name="he_value"/>
                            <field name="he_normal_value"/>
                            <field name="cl_value"/>
                            <field name="cl_normal_value"/>
                            <field name="pt_value"/>
                            <field name="pt_normal_value"/>
                            <field name="co_value"/>
                            <field name="co_normal_value"/>
                            <field name="inr_value"/>
                            <field name="inr_normal_value"/>
                            <field name="rbs_value"/>
                            <field name="rbs_normal_value"/>
                            <field name="sc_value"/>
                            <field name="sc_normal_value"/>
                            <field name="ur_value"/>
                            <field name="ur_normal_value"/>
                            <field name="sg_value"/>
                            <field name="sg_normal_value"/>
                            <field name="sgp_value"/>
                            <field name="sgp_normal_value"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

         #-----------tree--------

        <record id="healthreport_tree" model="ir.ui.view">
            <field name="name">healthreport.tree</field>
            <field name="model">health.report</field>
            <field name="arch" type="xml">
                <tree string="Blood Clinical Chemistry Report">
                    <field name="st_ids" widget="many2many_tags"/>
                    <field name="he_value"/>
                    <field name="cl_value"/>
                    <field name="pt_value"/>
                    <field name="co_value"/>
                    <field name="inr_value"/>
                    <field name="rbs_value"/>
                    <field name="sc_value"/>
                    <field name="ur_value"/>
                    <field name="sg_value"/>
                    <field name="sgp_value"/>
                </tree>
            </field>
        </record>

        #--------action--------------

        <record id="healthreport_view_action" model="ir.actions.act_window">
            <field name="name">Student Health Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">health.report</field>
            <field name="view_mode">tree,form</field>
        </record>


        #--------menu item----------

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="health_report_categ" name="Student Health Report" parent="oi_clinic_root" action="healthreport_view_action" sequence="6"/>


    </data>

</odoo>
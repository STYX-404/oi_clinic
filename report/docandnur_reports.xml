<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
     <template id="report6">
        <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.internal_layout">
                        <h2 class="text-center" style="background:#c4c4c4; color:black">Doctor or Nurse Information</h2>

                            <table class="table table-bordered mt32">
                            <tr>
                              <th class="text-center" style="background:#6B79E0; color: white">Name</th>
                                <td style="background:#c4c4c4;"> <span t-field="doc.doctors_name"/> </td>
                            </tr>

                                <tr>
                              <th class="text-center" style="background:#6B79E0; color: white">Job</th>
                                <td style="background:#c4c4c4;"> <span t-field="doc.doctors_job"/> </td>
                            </tr>

                            <tr>
                              <th class="text-center" style="background:#6B79E0; color: white">Phone Number</th>
                              <td style="background:#c4c4c4;"> <span t-field="doc.doctors_phone"/> </td>
                            </tr>

                            <tr>
                              <th class="text-center" style="background:#6B79E0; color: white">Code</th>
                              <td style="background:#c4c4c4;"><span t-field="doc.doctors_code"/></td>
                            </tr>

                            </table>

                    </t>
                </t>
        </t>
     </template>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
     <template id="report">
        <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">

                        <h2 style="background: black; color:white">Student information</h2>

                            <table class="table table-bordered mt32">
                            <tr>
                              <th style="background:black; color: white">name</th>
                              <td> <span t-field="doc.st_name"/> </td>
                            </tr>

                            <tr>
                              <th style="background:black; color: white">year</th>
                              <td> <span t-field="doc.st_academic_year"/> </td>
                            </tr>

                            <tr>
                              <th style="background:black; color: white">code</th>
                              <td><span t-field="doc.st_code"/></td>
                            </tr>

                            <tr>
                              <th style="background:black; color: white">e-mail</th>
                              <td><span t-field="doc.st_email"/></td>
                            </tr>

                            <tr>
                              <th style="background:black; color: white">password</th>
                              <td><span t-field="doc.st_password"/></td>
                            </tr>

                            <tr>
                              <th style="background:black; color: white">phone</th>
                              <td><span t-field="doc.st_phone"/></td>
                            </tr>

                            <tr>
                              <th style="background:black; color: white">address</th>
                              <td><span t-field="doc.st_address"/></td>
                            </tr>

                            </table>

                    </t>
                </t>
        </t>
     </template>
    </data>
</odoo>
